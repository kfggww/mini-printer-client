.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.header {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

button {
  width: 80%;
  margin: 10rpx;
  padding: 10rpx;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  text-align: center;
}

.status {
  text-align: center; /* 文本居中显示 */
  font-size: 16rpx; /* 根据需要调整字体大小 */
  margin-bottom: 20rpx;
}

.status-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f0f0f0;
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.status-row {
  display: flex;
  justify-content: space-between;
}

.status-item {
  display: flex;
  align-items: center;
  width: 50%; /* 每行两个指标，每个宽度为50% */
}

.status-label {
  font-size: 12px;
  color: #666;
  text-align: left; /* 文本左对齐 */
}

.status-value {
  font-size: 12px;
  color: #333;
  margin-left: 5px;
  white-space: nowrap; /* 禁止文本换行 */
  text-align: left; /* 文本左对齐 */
}
